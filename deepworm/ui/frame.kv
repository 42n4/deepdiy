<WidgetManager>
    orientation: 'vertical'
    ActionBar:
        size_hint_y:None
        # height:dp(100)
        # pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Deep Worm'
                with_previous: False
            ActionOverflow:
            # ActionButton:
            #     icon: 'atlas://data/images/defaulttheme/audio-volume-high'
            ActionButton:
                important: True
                text: 'Open'
            ActionButton:
                text: 'Detect'
            ActionButton:
                text: 'Segment'
            ActionButton:
                text: 'Train'
            ActionButton:
                text: 'Help'
            ActionGroup:
                text: 'Plugins'
                ActionButton:
                    text: 'Count'
                ActionButton:
                    text: 'Measure'
                ActionButton:
                    text: 'Btn7'
    BoxLayout:
        Splitter:
            size_hint_x:None
            width:dp(350)
            sizable_from: 'right'
            ScrollView:
                id:resource_tree
                scroll_type:["bars"]
                bar_width:10
                scroll_distance:1
                scroll_timeout:0

        BoxLayout:
            orientation: 'vertical'
            Splitter:
                size_hint_y:None
                height:dp(250)
                sizable_from: 'bottom'
                ScreenManager:
                    id:processing_screens
            BoxLayout:
                orientation: 'vertical'
                ScreenManager:
                    id:viewer_screens

                ProgressBar:
                    id:progress_bar
                    # size_hint_x:.5
                    size_hint_y:None
                    height:'5dp'
                    # value:(app.time*20)%100
