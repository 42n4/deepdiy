<Frame@BoxLayout>
    BoxLayout:
        size_hint_x:None
        width:dp(100)
        Menu:
            id:menu
    BoxLayout:
        Splitter:
            size_hint_x:None
            width:dp(350)
            sizable_from: 'right'
            ResourceTree:
                id:resource_tree
        BoxLayout:
            orientation: 'vertical'
            # rescale_with_parent: rescale_box.active
            Splitter:
                size_hint_y:None
                height:dp(250)
                sizable_from: 'bottom'
                BoxLayout:

                    ConfigPanel
                        id:config_panel
                # rescale_with_parent: rescale_box.active
            BoxLayout:
                orientation: 'vertical'
                ResultPanel:
                    id:result_panel
                ProgressBar:
                    id:pb
                    # size_hint_x:.5
                    size_hint_y:None
                    height:'5dp'
                    value:(app.time*20)%100
