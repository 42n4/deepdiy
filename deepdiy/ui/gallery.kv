<DemoCard>:
	size_hint:(None,None)
	width:'500dp'
	height:'120'
	padding:'10dp'
	BoxLayout:
		size_hint_x:None
		width:'120dp'
		AsyncImage:
			source:root.image_source
	BoxLayout:
		orientation:'vertical'
		Label:
			text:root.title
			font_size:22
			markup:True
			pos_hint:{'center_x':0.5,'center_y':0.5}
			height:self.size[1]
			halign:'left'
			valign:'middle'
			text_size:self.size
		Label:
			text:root.type
			text_size:self.size
		BoxLayout:
			size_hint_y:None
			height:'10dp'
		BoxLayout:
			size_hint_y:None
			height:'40dp'
			Button:
				text:'Description'
				on_release:root.load_description()
			Button:
				text:'Load'
				on_release:root.load_demo()

<Gallery>:
	orientation:'vertical'
	ScrollView:
		scroll_type:["bars"]
		bar_width:20
		StackLayout:
			id:demo_album
			size_hint_y:None
			height:self.minimum_height
