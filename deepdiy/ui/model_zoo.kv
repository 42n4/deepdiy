<ModelZoo>:
	ScrollView:
		scroll_type:["bars"]
		bar_width:10
		scroll_distance:1
		scroll_timeout:0
		BoxLayout:
			orientation:'vertical'
			size_hint_y:None
			height:self.minimum_height
			BoxLayout:
				size_hint_y:None
				height:35
				padding:[10,0,0,0]
				Label:
					size_hint_y:None
					height:35
					text: 'Models'
					text_size:self.size
					font_size:22
					markup:True
			BoxLayout:
				size_hint_y:None
				height:'55dp'
				padding:10
				Button:
					id:config_spinner
					text:'Add Models from Web'
					size_hint_y:None
					height:'35dp'
					on_release:root.load_online_models()
			BoxLayout:
				size_hint_y:None
				id:local_model_container
			BoxLayout:
				size_hint_y:None
				height:35
				padding:[10,0,0,0]
				Label:
					size_hint_y:None
					height:35
					text: 'Demos'
					text_size:self.size
					font_size:22
					markup:True
			BoxLayout:
				size_hint_y:None
				height:'55dp'
				padding:10
				Button:
					id:config_spinner
					text:'Add Demos from Web'
					size_hint_y:None
					height:'35dp'
					on_release:root.load_online_models()
			BoxLayout:
				size_hint_y:None
				id:local_demo_container
