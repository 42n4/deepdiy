<Train>
  TabbedPanel:
    do_default_tab:False

    TabbedPanelItem:
      text:'1.Labelling'
      BoxLayout:
        BoxLayout:
          Button:
            text:'VIA label tool'
            size_hint_y:None
            height:'48dp'
            on_release:root.label()

    TabbedPanelItem:
      text:'2.Cofig'
      BoxLayout:
        BoxLayout:
          Button:
            text:'Download config file'
            size_hint_y:None
            height:'48dp'
            on_release:root.label()
    TabbedPanelItem:
      text:'3.Pack Data'
      BoxLayout:
        BoxLayout:
          orientation: 'vertical'
          Button:
            text:'Select image directory'
            size_hint_y:None
            height:'48dp'
            on_release:root.select_img_dir()
          Button:
            text:'Select config file'
            size_hint_y:None
            height:'48dp'
            on_release:root.select_img_dir()
          Button:
            text:'Select annoation file'
            size_hint_y:None
            height:'48dp'
            on_release:root.select_annotation_path()
        Button:
          text:'Run (select save directory)'
          size_hint_y:None
          height:'48dp'
          on_release:root.save_zip()
    TabbedPanelItem:
      text:'4.Run'
      BoxLayout:
        Spinner:
          id:model_spinner
          text:'Select Program'
          size_hint_y:None
          height:'48dp'
        Button:
          text:'Start Colab'
          size_hint_y:None
          height:'48dp'
          on_release:root.train()
