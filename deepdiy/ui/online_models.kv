<ModelCard>:
	size_hint:(None,None)
	width:'750dp'
	height:'200dp'
	BoxLayout:
		size_hint_x:None
		width:250
		padding:10
		AsyncImage:
			source:'http://www.aimechanic.com/wp-content/uploads/2017/10/Mask-R-CNN-TensorFlow-Keras.png'
	BoxLayout:
		size_hint_x:None
		width:500
		orientation:'vertical'
		BoxLayout:
			size_hint_y:None
			height:40
			Label:
				size_hint_x:None
				width:300
				id:lbl_title
				text:root.title
				font_size:22
				markup:True
				pos_hint:{'center_x':0.5,'center_y':0.5}
				halign:'left'
				valign:'middle'
				text_size:self.size
			BoxLayout:
				Button:
					text:'Details'
					on_release:root.operations[self.text](root.id)
				Button:
					text:'Install'
					on_release:root.install()
				Button:
					text:'Demos'
					on_release:root.operations[self.text](root.id)
		BoxLayout:
			size_hint_y:None
			height:'10dp'
		ScrollView:
			size_hint_y:None
			height:100
			bar_width:10
			scroll_type:["bars"]
			BoxLayout:
				size_hint_y:None
				height:lbl_abstract.size[1]
				Label:
					size_hint_y:None
					id:lbl_abstract
					text:root.abstract
					font_size:17
					markup:True
					is_shortened:False
					# shorten:True
					# shorten_from:'right'
					# max_lines:4
					halign:'left'
					valign:'top'
					text_size:(self.width,None)
					size: self.texture_size
		BoxLayout:
			id:installer

<OnlineModels>:
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			size_hint_y:None
			height:'40dp'
			Button:
				text:'Refresh'
			Button:
				text:'Close'
				on_release:root.dismiss()
		ScrollView:
			bar_width:15
			scroll_type:["bars"]
			StackLayout:
				id:model_album
				size_hint_y:None
				height:self.minimum_height
				padding:20
				spacing:10
